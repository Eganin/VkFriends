<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="16dp"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:elevation="30dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/friend_city_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp" >

            <TextView
                android:id="@+id/friend_txt_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/friend_txt_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/friend_img_online"
            android:layout_width="@dimen/online_size"
            android:layout_height="@dimen/online_size"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:background="@color/purple_200"/>

    </LinearLayout>

</FrameLayout>